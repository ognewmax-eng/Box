{
  "name": "box-party-game",
  "version": "1.0.0",
  "description": "Локальная мультиплеерная Party Game платформа (как Jackbox)",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "node server.js",
    "dev:client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "npm run build && node server.js",
    "tunnel": "npm run build && concurrently -n s,t \"node server.js\" \"npx localtunnel --port 3000\"",
    "test": "node server.constants.test.js && cd client && npm run test",
    "build:pkg": "node scripts/build-pkg.js",
    "build:pkg:win": "node scripts/build-pkg-win.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.21.0",
    "multer": "^2.0.2",
    "qrcode": "^1.5.3",
    "socket.io": "^4.7.5"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "esbuild": "^0.24.0",
    "pkg": "^5.8.0"
  }
}
